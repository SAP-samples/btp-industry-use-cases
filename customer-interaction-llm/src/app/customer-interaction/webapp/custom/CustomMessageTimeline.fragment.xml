<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.suite.ui.commons"
	width="100%"
	height="100%"
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout">
	<l:VerticalLayout id="VerticalLayout" class="sapUiTinyMargin" width="">
		<l:content>
			<Timeline
				id="idTimeline"
				enableDoubleSided="true"
				content="{/MessageThread}"
				filterList="{/MessageThread}">
				<content>
					<TimelineItem
						id="idTemplateItem"
						dateTime="{createdAt}"
						title="{summary}"
						text="{message}"
						userName="{name}"
						filterValue="{name}">
					</TimelineItem>
				</content>
				<filterList>
					<TimelineFilterListItem
						id="idTimelineFilterListItem"
						key="{name}"
						text="{name}">
					</TimelineFilterListItem>
				</filterList>
			</Timeline>
		</l:content>
	</l:VerticalLayout>

	<!-- "{path: 'plantStatus', formatter: '.plantConditionStatusIcon'}"> -->
</core:FragmentDefinition>